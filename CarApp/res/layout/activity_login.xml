<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_carinfo"
        >
    <include layout="@layout/activity_header"
             android:id="@+id/include"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/include"
            android:layout_above="@+id/include2"
            android:layout_margin="30dp"
            android:gravity="center_vertical">

        <EditText
                android:drawableStart="@drawable/icon_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/etUserPhone"
                android:hint="手机号码"/>

        <EditText
                android:drawableStart="@drawable/icon_lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:password="true"
                android:hint="口令"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="注册"
                    android:id="@+id/button"
                    android:layout_weight="5"
                    android:layout_marginRight="10dp"
                    android:background="#66ccff"
                    android:textColor="#FFF"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="登录"
                    android:id="@+id/button2"
                    android:layout_weight="5"
                    android:layout_marginLeft="10dp"
                    android:background="#FFCC66"
                    android:textColor="#FFF"/>
        </LinearLayout>
        <View android:layout_height="1px" android:layout_marginTop="30dp" android:layout_width="fill_parent" android:background="#FFF"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:id="@+id/tvForgetPwd"
                android:layout_marginLeft="120dp"
                android:textSize="16dp"
                android:layout_gravity="right"
                android:textColor="#CC9999"/>

        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alreadyAgreen"
                    android:id="@+id/checkBox"
                    android:checked="true"
                    android:textSize="16dp"
                    android:textColor="#999"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/tvLicense"
                    android:clickable="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allRight"
                    android:id="@+id/tvLicense"
                    android:textSize="16dp"
                    android:textColor="#990000"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>
    <include layout="@layout/activity_bottom"
             android:id="@+id/include2"/>
</RelativeLayout>