                                <ImageView
                                        android:src="@drawable/menu_07"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:id="@+id/tv_home_menu_07"
                                        android:layout_gravity="left|top"
                                        />
                        </FrameLayout>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvHomeButtonLeft"
                                android:layout_gravity="left|top"
                                android:textSize="10dp"
                                android:layout_marginLeft="110px"
                                android:layout_marginTop="1550px"
                                android:background="@drawable/left_button_txt"
                                android:gravity="center"
                                android:padding="30px"
                                android:textColor="@color/buttonTextColor"
                                android:focusable="true"
                                android:textIsSelectable="false"/>

                        <TextView
                                android:layout_width="69dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvHomeButtonRight"
                                android:layout_gravity="left|top"
                                android:textSize="10dp"
                                android:layout_marginLeft="810px"
                                android:layout_marginTop="1550px"
                                android:background="@drawable/right_button_txt"
                                android:padding="30px"
                                android:gravity="center"
                                android:textColor="@color/buttonTextColor"
                                android:focusable="true"/>

                </FrameLayout>
        </ScrollView>

</LinearLayout>

